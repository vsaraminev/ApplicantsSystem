@model AdminApplicantDetailsViewModel

@{
    ViewData["Title"] = $"Details for {Model.FirstName} {Model.LastName}";
}
<br />
<h2>@ViewData["Title"]</h2>
<br />
<table class="table table-bordered  table-hover text-center">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>
                LinkedIn
            </th>
            <th>
                Statuses
            </th>
            <th>
                Interviews
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Model.FirstName
            </td>
            <td>
                @Model.LastName
            </td>
            <td>
                @Model.Email
            </td>
            <td>
                @if (Model.Phone == null)
                {
                    <p>Not provided</p>
                }
                else
                {
                    @Model.Phone
                }
            </td>
            <td>
                @if (Model.LinkedIn == null)
                {
                    <p>Not provided</p>
                }
                else
                {
                    @Model.LinkedIn
                }
            </td>
            <td>
                <a asp-controller="Applicants" asp-action="GetStatuses" asp-route-id="@Model.Id" class="btn btn-primary">Show Statuses</a>
            </td>
            <td>
                <a asp-controller="Applicants" asp-action="GetInterviews" asp-route-id="@Model.Id" class="btn btn-primary">Show Interviews</a>
            </td>
        </tr>
    </tbody>
</table>

<a asp-controller="Applicants" asp-action="Index" class="btn btn-outline-primary">Back</a>