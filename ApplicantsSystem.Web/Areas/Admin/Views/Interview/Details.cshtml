@model AdminInterviewDetailsViewModel
@{
    ViewData["Title"] = $"Details For Interview With {Model.Applicant.FirstName} {Model.Applicant.LastName}";
}
<br />
<h2>@ViewData["Title"]</h2>
<br />

@if (Model.TestId != null)
{
    <table class="table table-bordered  table-hover text-center">
        <thead>
            <tr>
                <th>
                    Applicant Name
                </th>
                <th>
                    Send Date
                </th>
                <th>
                    Test Name
                </th>
                <th>
                    Test Url
                </th>
                <th>
                    Test Result Url
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.Applicant.FirstName @Model.Applicant.LastName
                </td>
                <td>
                    @Model.StartTime
                </td>
                <td>
                    @Model.Test.Name
                </td>
                <td>
                    @Model.Test.Url
                </td>
                <td>
                    @if (Model.Result.ResultUrl == null)
                    {
                        <form method="post" asp-area="Admin" asp-controller="Interview" asp-action="SetTestResult">
                            <div class="row">
                                <div class="col-md-8">
                                    <input name="ResultUrl" class="form-control" />
                                    <input type="hidden" name="ApplicantId" value="@Model.ApplicantId" />
                                    <input type="hidden" name="InterviewId" value="@Model.Id" />
                                </div>
                                <div class="col-md-4">
                                    <input class="btn btn-success" type="submit" value="Set Result" />
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        @Model.Result.ResultUrl
                    }
                </td>
            </tr>
        </tbody>
    </table>
}
else
{

    <table class="table table-bordered  table-hover">
        <tr>
            <th>
                Applicant Name:
            </th>
            <td>
                @Model.Applicant.FirstName &nbsp; @Model.Applicant.LastName
            </td>
        </tr>
        <tr>
            <th>
                First Interviewer Name:
            </th>
            <td>
                @Model.Interviewers.First().Interviewer.FirstName  &nbsp; @Model.Interviewers.First().Interviewer.LastName
            </td>
        </tr>
        <tr>
            <th>
                &emsp; Feedback:
            </th>
            <td>
                @if (Model.Feedbacks.Count != 0)
                {
                    @Html.Raw(Model.Feedbacks.First().Context)
                }
                else
                {
                    <p>
                        Awaiting interviewer to leave feedback.
                    </p>
                }
            </td>
        </tr>
        <tr>
            <th>
                &emsp; Score:
            </th>
            <td>
                @if (Model.Feedbacks.Count != 0)
                {
                    @Html.Raw(Model.Feedbacks.First().Score)
                }
                else
                {
                    <p>
                        Awaiting interviewer to leave feedback.
                    </p>
                }
            </td>
        </tr>
        <tr>
            <th>
                Second Interviewer Name:
            </th>
            <td>
                @if (Model.Interviewers.Count > 1)
                {
                    @Model.Interviewers.Last().Interviewer.LastName   @Model.Interviewers.Last().Interviewer.FirstName
                }
                else
                {
                    <p> &mdash; </p>
                }
            </td>
        </tr>
        <tr>
            <th>
                &emsp; Feedback:
            </th>
            <td>
                @if (Model.Interviewers.Count > 1 && Model.Feedbacks.Count == 0)
                {
                    <p>
                        Awaiting interviewer to leave feedback.
                    </p>
                }
                else if (Model.Interviewers.Last() != null)
                {
                    @Html.Raw(Model.Feedbacks.Last().Context)
                }
                else
                {
                    <p> &mdash; </p>
                }
            </td>
        </tr>
        <tr>
            <th>
                &emsp; Score:
            </th>
            <td>
                @if (Model.Interviewers.Count > 1 && Model.Feedbacks.Count == 0)
                {
                    <p>
                        Awaiting interviewer to leave feedback.
                    </p>
                }
                else if (Model.Interviewers.Last() != null)
                {
                    @Model.Feedbacks.Last().Score
                }
                else
                {
                    <p> &mdash; </p>
                }
            </td>
        </tr>
        <tr>
            <th>
                Start Time:
            </th>
            <td>
                @Model.StartTime
            </td>
        </tr>
        <tr>
            <th>
                End Time:
            </th>
            <td>
                @Model.EndTime
            </td>
        </tr>
    </table>
}


<a asp-controller="Interview" asp-action="Index" class="btn btn-outline-primary">Back</a>

